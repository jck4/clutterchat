<!-- Navigation bar (updated) -->
<div class="navbar">
  <div class="nav-left">
    <h1>ClutterChat</h1>
  </div>

  <div class="nav-right">
    <% if user_signed_in? %>
      <span>Welcome, <%= current_user.discord_username %>!</span>
      <%= form_with url: destroy_user_session_path, method: :delete, class: 'logout-form' do %>
        <%= submit_tag 'Sign out', class: "btn-logout" %>
      <% end %>
    <% else %>
      <%= form_tag user_discord_omniauth_authorize_path, method: :post, authenticity_token: true, data: { turbo: false }, class: 'login-form' do %>
        <%= submit_tag "Sign in with Discord", class: "btn-login" %>
      <% end %>
    <% end %>
  </div>
</div>

<!-- Post creation form (for logged-in users) -->
<% if user_signed_in? %>
  <div class="new-post-form">
    <%= form_with model: @post, url: posts_path, local: true do |form| %>
      <div class="field">
        <%= form.text_area :content, placeholder: "What's on your mind?", rows: 3, class: "post-input" %>
      </div>
      <%= form.submit "Post", class: "btn-post" %>
    <% end %>
  </div>
<% end %>

<% if user_signed_in? %>
  <div class="sticky-notes-container">
    <% @posts.each do |post| %>
      <div class="sticky-note" data-id="<%= post.id %>">
        <h3><%= post.user.discord_username %></h3>
        <p><%= post.content %></p>
        <small>Posted on: <%= post.created_at.strftime("%B %d, %Y %H:%M") %></small>
      </div>
    <% end %>
  </div>
<% end %>

<!-- Updated CSS -->
<style>
  /* Navbar Styling */
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 30px;
    background-color: #333;
    color: white;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .nav-left h1 {
    margin: 0;
    font-size: 1.8rem;
    font-weight: bold;
  }

  .nav-right span {
    font-size: 1.1rem;
    margin-right: 10px;
  }

  .btn-login, .btn-logout {
    background-color: #7289da;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  }

  .btn-login:hover, .btn-logout:hover {
    background-color: #5a73c8;
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.3);
  }

  /* Post Form Styling */
  .new-post-form {
    margin: 20px auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    text-align: center;
  }

  .post-input {
    width: 100%;
    padding: 15px;
    border-radius: 8px;
    border: 1px solid #ccc;
    margin-bottom: 15px;
    font-size: 1rem;
  }

  .btn-post {
    background-color: #7289da;
    color: white;
    padding: 12px 30px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .btn-post:hover {
    background-color: #5a73c8;
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
  }

  /* Sticky Notes Styling */
  .sticky-notes-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-around;
    padding: 20px;
  }

  .sticky-note {
    background-color: #fff176;
    padding: 20px;
    width: 240px;
    min-height: 180px;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    position: relative;
    transform: rotate(-3deg);
    margin-bottom: 20px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    font-family: 'Comic Sans MS', cursive, sans-serif;
  }

  .sticky-note:nth-child(even) {
    transform: rotate(2deg);
  }

  .sticky-note:hover {
    transform: rotate(0deg);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  /* Add some fun note animations */
  .sticky-note:hover::before {
    content: 'ðŸ“Œ';
    position: absolute;
    top: -10px;
    left: 10px;
    font-size: 1.5rem;
    transform: rotate(-10deg);
  }

  /* Small media queries for mobile responsiveness */
  @media (max-width: 600px) {
    .sticky-note {
      width: 90%;
      margin-left: auto;
      margin-right: auto;
    }

    .new-post-form {
      max-width: 100%;
      padding: 15px;
    }
  }
</style>
